{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2017", "es6", "dom"],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
         "@/*": ["src/"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
